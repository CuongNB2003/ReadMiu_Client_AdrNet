<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/mau_nen"
    tools:context=".screen.activity.InfoUserActivity">
    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_backReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"/>
        <TextView
            android:text="@string/txtInfoUser"
            style="@style/TextViewTitle"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ll_true"
        android:layout_below="@+id/ll_one"
        style="@style/TextViewNone"
        android:text="Hãy điền đầy đủ thông tin để có trải nghiệm tốt nhất."
        android:layout_marginBottom="50dp"/>
    <LinearLayout
        android:padding="15dp"
        android:layout_below="@+id/ll_true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:padding="25dp"
            android:background="@drawable/background_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_Avata"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_ed_username"
                android:scaleType="centerCrop"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textErrFullname"
                style="@style/TextInputLayout"
                android:hint="@string/txtFullname"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_ed_username"
                app:helperTextTextColor="@color/red">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_fullname"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="48dp"
                    style="@style/TextInputEditText"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textErrEmail"
                style="@style/TextInputLayout"
                android:hint="@string/txtEdEmail"
                app:helperTextEnabled="true"
                app:startIconDrawable="@drawable/ic_email"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:layout_height="48dp"
                    style="@style/TextInputEditText"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textErrPhone"
                style="@style/TextInputLayout"
                android:hint="@string/txtEdPhone"
                app:endIconMode="clear_text"
                app:counterMaxLength="10"
                app:startIconDrawable="@drawable/ic_phone"
                app:helperTextTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:maxLength="10"
                    android:inputType="text"
                    style="@style/TextInputEditText"/>

            </com.google.android.material.textfield.TextInputLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="25dp"
                android:id="@+id/btn_tiep"
                android:textColor="@color/mau_button"
                android:background="@drawable/custom_btn_none"
                android:text="@string/txtBtnNext"
                style="@style/AppCompatButton"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>