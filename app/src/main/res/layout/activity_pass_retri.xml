<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/mau_nen"
    tools:context=".screen.activity.InfoUserActivity">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_backRetri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/txtRetriPass"
            android:textColor="@color/text"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy điền đầy đủ thông tin để chúng tôi giúp bạn lấy lại tài khoản của bạn."
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="@color/text"
        android:layout_marginBottom="50dp"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txtEdUser"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_ed_username"
        app:helperTextTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_retriUsername"
            android:layout_width="match_parent"
            style="@style/TextInputEditText"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txtEdEmail"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_email"
        app:helperTextTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_retriEmail"
            android:layout_width="match_parent"
            style="@style/TextInputEditText"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txtEdPass"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/ic_ed_password"
        app:helperTextTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_retriPass"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            style="@style/TextInputEditText"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="5dp"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txtEdRePass"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/ic_ed_password"
        app:helperTextTextColor="@color/red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_RetriRePass"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            style="@style/TextInputEditText"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="50dp"
        android:id="@+id/btn_layMatKhau"
        android:background="@drawable/custom_btn"
        android:text="@string/txtBtnRetri"
        style="@style/AppCompatButton"/>
</LinearLayout>