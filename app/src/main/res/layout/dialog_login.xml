<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="400dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">

    <TextView
        android:background="@drawable/background_title"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/txtTB"
        style="@style/TextViewTitle"/>
    <TextView
        android:id="@+id/tvMess"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:textColor="@color/mau_button"
        style="@style/TextViewNone" />
    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:id="@+id/btnCancelLogin"
            android:textColor="@color/mau_button"
            android:background="@drawable/custom_btn_cancel"
            android:text="@string/txtHuy"
            style="@style/AppCompatButton"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:id="@+id/btnLogin"
            android:background="@drawable/custom_btn_ok"
            style="@style/AppCompatButton"/>
    </LinearLayout>

</LinearLayout>