<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mau_nen"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            app:cardCornerRadius="100dp"
            android:backgroundTint="@color/mau_nen"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/imgItemAvata"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ed_username"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvItemFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FullName"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/tvItemNDCmt"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dùng comment"
                android:textColor="@color/text"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:background="@color/thang_ngang"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>