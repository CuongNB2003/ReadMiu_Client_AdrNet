<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@color/mau_nen"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_weight="3"
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/img_AnhBiaF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_NameF"
                android:maxLines="1"
                android:text="Name"
                style="@style/TextViewBold"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_TenTacGiaF"
                android:maxLines="1"
                android:text="Tên tác giả"
                style="@style/TextViewMin"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_NamXuatBanF"
                android:maxLines="1"
                android:text="Năm xuất bản"
                style="@style/TextViewMin"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/tv_MoTaF"
                android:maxLines="4"
                android:text="Mô tả"
                style="@style/TextViewMin"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:background="@color/thang_ngang"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>