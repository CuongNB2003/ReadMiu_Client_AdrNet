<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau_nen"
    tools:context=".screen.activity.DetailStoryActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/itemDetail_CoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/itemDetail_appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.appcompat.widget.Toolbar
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin">
                    <LinearLayout
                        android:padding="10dp"
                        android:elevation="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_backDetal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_back"
                            android:layout_gravity="center"/>
                        <TextView
                            android:maxLines="1"
                            android:id="@+id/tv_TenTruyen"
                            android:textColor="@color/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="..."
                            style="@style/TextViewTitle" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
                <ImageView
                    android:id="@+id/img_anhBia"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/img_err"
                    android:scaleType="center"
                    app:layout_collapseMode="parallax"/>
                <LinearLayout
                    android:elevation="10dp"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/line1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_weight="9"
                                android:id="@+id/tv_tenTruyen"
                                android:layout_width="0dp"
                                android:text="..."
                                style="@style/TextViewTitle"/>
                            <ImageView
                                android:id="@+id/imgFavorite"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_favorite_false"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_below="@+id/line1"
                            android:id="@+id/line2"
                            android:background="@drawable/custom_detail_img"
                            android:padding="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="11">
                            <TextView
                                android:textColor="@color/text"
                                android:id="@+id/tv_tenTacGia"
                                android:layout_weight="7"
                                android:layout_width="0dp"
                                android:text="..."
                                style="@style/TextViewNone"/>
                            <TextView
                                android:textColor="@color/text"
                                android:id="@+id/tv_namXuatBan"
                                android:layout_weight="4"
                                android:layout_width="0dp"
                                android:text="..."
                                style="@style/TextViewNone"/>
                        </LinearLayout>
                        <TextView
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_below="@id/line2"
                            android:background="@color/mau_nen"
                            android:textColor="@color/text"
                            android:id="@+id/tv_mota"
                            android:maxLines="5"
                            android:text="..."
                            android:paddingBottom="66dp"
                            style="@style/TextViewMin"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/itemDetail_NestesScrollView"
            android:layout_below="@id/itemDetail_appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="15dp"
                    android:id="@+id/btn_read"
                    android:background="@drawable/custom_btn_color"
                    android:text="@string/txtRead"
                    android:layout_gravity="bottom"
                    style="@style/AppCompatButton"/>
                <LinearLayout
                    android:weightSum="13"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:text="@string/txtBL"
                        style="@style/TextViewBold"/>
                    <TextView
                        android:id="@+id/tv_tongBL"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:gravity="bottom|end"
                        android:text="..."
                        style="@style/TextViewMin"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/recy_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <LinearLayout
        android:background="@color/mau_nen"
        android:elevation="10dp"
        android:padding="10dp"
        android:weightSum="17"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvata"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_ed_username"/>
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:background="@drawable/custom_edittext_cmt"
            android:layout_weight="15"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:weightSum="14"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edCmt"
                android:layout_marginLeft="10dp"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:hint="Viết gì đó "
                android:layout_gravity="bottom"
                style="@style/EditTextComment"/>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_cmt_icon"/>
                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/imgCmt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_comment"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>