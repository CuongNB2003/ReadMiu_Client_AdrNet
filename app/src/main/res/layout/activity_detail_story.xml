<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/maunen"
    tools:context=".screen.activity.DetailStoryActivity">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_backDetal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/txtDetail"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_anhBia"
        android:background="@drawable/img_detail_custom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img1"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_tenTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên truyện"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_tenTacGia"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên tác giả"
            android:textSize="18dp"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_namXuatBan"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Năm xuất bản"
            android:textSize="18dp"/>
    </LinearLayout>
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_mota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả truyện"
        android:textSize="18dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:id="@+id/btn_read"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_cuttom"
        android:text="@string/txtRead"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"/>
    <TextView
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/txtBL"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_comment"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nhập bình luận"/>
        <Button
            android:id="@+id/btn_comment"
            android:layout_marginLeft="15dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gửi"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recy_comment"/>
</LinearLayout>