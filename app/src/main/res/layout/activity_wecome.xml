<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="@drawable/custom_text_input"
    tools:context=".screen.activity.WecomeActivity">
    <TextView
        android:layout_marginTop="100dp"
        android:textColor="@color/mau_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtWecome"
        android:textStyle="bold"
        android:textSize="36dp"/>
    <TextView
        android:layout_marginTop="45dp"
        android:textColor="@color/text"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="@string/txtMieuTa"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/text"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nguyễn Bá Cường-PH22662"/>
    <ProgressBar
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
</LinearLayout>